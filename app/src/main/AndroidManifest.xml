<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.unitconvertor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.UnitConvertor">
        <activity
            android:name=".VolumeActivity"
            android:exported="true"
            android:label="Volume"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TemperatureActivity"
            android:exported="true"
            android:label="Temperature"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AreaActivity"
            android:exported="true"
            android:label="Area"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".WeightActivity"
            android:exported="true"
            android:label="Weight"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".LengthActivity"
            android:exported="true"
            android:label="Length"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>